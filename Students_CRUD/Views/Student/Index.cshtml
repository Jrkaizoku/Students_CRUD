@model IEnumerable<Students_CRUD.Models.Student>

@{
    ViewBag.Title = "Lista de Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Alumnos</h2>

<p>
    
    @Html.ActionLink("Nuevo", "Create", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registration_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fullName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>

            @{
                switch (item.gender)
                {
                    case "M": <span>Masculino</span>
                                break;
                    case "F":<span>Femenino</span>
                        break;
                        }

                  }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.registration_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id },new { @class="fdelete"})
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".fdelete").click(function (event) {
            if (!confirm("Se eliminara permanentemete si continua")) {
                event.preventDefault();
            }

        });
        </script>
}